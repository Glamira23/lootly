<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block template="Lootly_Lootly::widget.phtml" output="1" class="Lootly\Lootly\Block\Widget"
                   name="lootly_script" after="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="lootlyWidget" xsi:type="array">
                                <item name="component" xsi:type="string">Lootly_Lootly/js/view/lootly-widget</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
